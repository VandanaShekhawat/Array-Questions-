public class MyClass {
    public static void main(String args[]) {
        // Reverse an array
      int arr [] = {2,13,4,7,9,10,4,18};
      int start = 0;
      int end = arr.length-1;
      while(start <=end){
          int temp = arr[start];
          arr[start] = arr[end];
          arr[end] = temp;
          start ++;
          end--;
      }
      System.out.println("reverse array");
        for(int i = 0;i<arr.length;i++){
            System.out.print(arr[i]+" ");
        }
    }
}
